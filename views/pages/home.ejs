    <div class="modal fade" id="newSetInput" tabindex="-1" role="dialog" aria-labelledby="set input modal" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Upload New Set</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="dropzone" id="myAwesomeDropzone">
              <input type="hidden" name="dateNow" id="set-date-now">
              <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="inputGroup-sizing-sm">Set Date</span>
                </div>
                <input type="date" class="form-control set-input" id="set-date" aria-label="date" aria-describedby="inputGroup-sizing-sm" name="date" required>
              </div>              
              <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="inputGroup-sizing-sm">Speaker</span>
                </div>
                <input type="text" class="form-control set-input" id="set-speaker" aria-label="speaker" aria-describedby="inputGroup-sizing-sm" name="speaker" required>
              </div>
              <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="inputGroup-sizing-sm">Praise Lead</span>
                </div>
                <input type="text" class="form-control set-input" id="set-praise-lead" name="praiseLead" aria-label="praise leader" aria-describedby="inputGroup-sizing-sm" required>
              </div>
              <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="inputGroupSelect01">Event</label>
                </div>
                <select class="custom-select set-input" id="inputGroupSelect01" name="event" id="set-event" required>
                  <option selected>Choose...</option>
                  <option value="SWS">SWS</option>
                  <option value="TFN">TFN</option>
                  <option value="EASTER">Easter</option>
                  <option value="GoodFriday">Good Friday</option>
                  <option value="WR">Winter Retreat</option>
                  <option value="TR">Thanksgiving</option>
                  <option value="Practice Session">Practice Session</option>
                  <option value="OTHER">Other</option>
                </select>
              </div>
              <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                  <label class="input-group-text" for="inputGroupSelect01">Part</label>
                </div>
                <select class="custom-select set-input" id="inputGroupSelect01" name="part" id="set-part" required>
                  <option selected>Choose...</option>
                  <option value="Opening">Opening</option>
                  <option value="Closing">Closing</option>
                  <option value="Special">Special</option>
                </select>
              </div>                     
              <button id="upload-set" type="submit" class="btn btn-primary">Submit</button>
              <div class="upload-spinner hidden">
                <div class="loader sets-loader-form"></div><span> Uploading...do not close the window or navigate away.</span>
              </div>
            </form>
            <style>
              .dz-filename {
                display: inline-block;
              }
              .dz-size {
                display: inline-block;
              }
            </style>
            <script>
              // set hidden input, date now to create unique folders for files on s3
              $('#myAwesomeDropzone').on('click', '#set-date', function() {
                $('#set-date-now').val(Date.now());
              });

              Dropzone.options.myAwesomeDropzone = false;

              let myDropzone = new Dropzone("form#myAwesomeDropzone", 
              {
                paramName: "file", // The name that will be used to transfer the file
                maxFilesize: 20, // MB
                accept: function(file, done) {
                  if (file.name == "justinbieber.jpg") {
                    done("Naha, you don't.");
                  }
                  else { done(); }
                },
                autoProcessQueue: false,
                enqueueForUpload: false,
                parallelUploads: 30,
                uploadMultiple: true,
                url: function(files) {
                  return '/api/sets';
                },              
                previewTemplate: `
                <div class="dz-preview dz-file-preview">
                  <div class="dz-details">
                    <div class="dz-filename"><span data-dz-name></span></div>
                    <div class="dz-size" data-dz-size></div>
                  </div>
                </div>`
              });

              $('#upload-set').on('click', function(e) {
                e.preventDefault();
                myDropzone.processQueue();
                $('#upload-set').addClass('hidden');
                $('.dz-preview, .dz-default').addClass('hidden');
                $('.upload-spinner').removeClass('hidden');
              })
            </script>
          </div>
        </div>
      </div>
    </div>
